{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:earlyMondays"
  ],
  "dependencyDashboard": false,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "ionic-team/capacitor-swift-pm"
      ],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "androidx.core:core"
      ],
      "matchManagers": [
        "gradle"
      ],
      "enabled": false
    }
  ]
}
